<Window x:Class="OfflineChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat About It"
        Height="600"
        Width="900"
        Background="#F0F8FF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Chat Room Panel -->
        <DockPanel Grid.Column="0" Background="#DDEEFF">
            <StackPanel Margin="10">
                <TextBlock Text="Chat Rooms"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="ChatRoomList"
                         FontSize="14"
                         Height="450"
                         SelectionChanged="ChatRoomList_SelectionChanged"/>
                <Button Content="+"
                        FontSize="16"
                        Width="40"
                        HorizontalAlignment="Left"
                        Click="AddChatRoom_Click"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- Chat Area -->
        <DockPanel Grid.Column="1" Margin="10">
            <!-- Chat History -->
            <RichTextBox x:Name="ChatHistory"
                         IsReadOnly="True"
                         FontSize="16"
                         VerticalScrollBarVisibility="Auto"
                         DockPanel.Dock="Top"
                         Height="450"
                         Margin="0,0,0,10"/>

            <!-- Message Input Area -->
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageBox"
                         FontSize="16"
                         Height="30"
                         Grid.Column="0"
                         KeyDown="MessageBox_KeyDown"
                         Margin="0,0,5,0"/>

                <Button Content="Send"
                        FontSize="16"
                        Width="75"
                        Height="30"
                        Grid.Column="1"
                        Margin="0,0,5,0"
                        Click="SendMessage_Click"/>

                <Button Content="ðŸ“Ž"
                        FontSize="16"
                        Width="40"
                        Height="30"
                        Grid.Column="2"
                        Click="UploadFile_Click"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>