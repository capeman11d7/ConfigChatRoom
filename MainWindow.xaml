<Window x:Class="OfflineChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat About It"
        Height="600"
        Width="900"
        Background="#F0F8FF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Chat Room List -->
        <DockPanel Grid.Column="0" Background="#DDEEFF">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Chat Rooms" FontWeight="Bold" FontSize="16"/>
                <Button Content="+" Width="25" Height="25" Margin="5,0,0,0"
                        Click="AddChatRoom_Click"/>
            </StackPanel>
            <ListBox x:Name="ChatRoomList"
                     Margin="10"
                     FontSize="14"
                     SelectionChanged="ChatRoomList_SelectionChanged"/>
        </DockPanel>

        <!-- Chat Area -->
        <DockPanel Grid.Column="1" Margin="10">
            <!-- Chat History -->
            <RichTextBox x:Name="ChatHistory"
                         IsReadOnly="True"
                         FontSize="16"
                         Margin="0,0,0,10"
                         VerticalScrollBarVisibility="Auto"
                         DockPanel.Dock="Top"
                         Height="450"/>

            <!-- Message Box and Buttons -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
                <TextBox x:Name="MessageBox"
                         FontSize="16"
                         Width="500"
                         Height="30"
                         KeyDown="MessageBox_KeyDown"/>
                <Button Content="Send"
                        FontSize="16"
                        Width="75"
                        Margin="5,0,0,0"
                        Click="SendMessage_Click"/>
                <Button Content="ðŸ“Ž"
                        FontSize="16"
                        Width="40"
                        Margin="5,0,0,0"
                        Click="UploadFile_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>